# PharmaLens AI Engine Environment Variables
# ============================================

# Application
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# OpenAI (Cloud Mode) - Add your key if using cloud mode
# OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Local Model (Secure Mode)
LOCAL_MODEL_PATH=/models/llama-3-8b
LOCAL_MODEL_NAME=llama-3-8b

# Enable/Disable Modes
CLOUD_ENABLED=true
LOCAL_ENABLED=true

# Node.js Backend
NODE_BACKEND_URL=http://localhost:3001

# Neo4j Knowledge Graph (optional)
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your-neo4j-password
